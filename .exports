#!/usr/bin/env bash

# Make vim the default editor.
export EDITOR='vim'

# Make Python use UTF-8 encoding for input/output.
export PYTHONIOENCODING='UTF-8'

# Highlight section titles in manual pages (yellow bold).
export LESS_TERMCAP_md=$'\e[01;33m'

# Donâ€™t clear the screen after quitting a manual page.
export MANPAGER='less -X'

# GPG compatibility
export GPG_TTY=$(tty)

# macOS: hide "default interactive shell is now zsh" warning
export BASH_SILENCE_DEPRECATION_WARNING=1

# Folder of KUBECONFIGS
#export KUBECONFIG="$HOME/.kube/config:$(find $HOME/iCloudDrive/Allgemein/kubectl -type f -name '*.yaml' | tr '\n' ':' | sed 's/:$//')"
export KUBECONFIG="$(find $HOME/iCloudDrive/Allgemein/kubectl -type f -name '*.yaml' | tr '\n' ':' | sed 's/:$//')"
