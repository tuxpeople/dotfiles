# https://github.com/toptal/haste-server/issues/142#issuecomment-264856341
haste() {
	a=$(cat)
	curl -X POST -s -d "$a" https://paste.eighty-three.me/documents | awk -F '"' '{print "https://paste.eighty-three.me/"$4}'
}

# https://serverfault.com/a/927760
# hurryup root "10.10.0.3"
function hurryup() {
	until ssh -o ConnectTimeout=2 "$1"@"$2"; do
		sleep 1
	done
}

# Create a new directory and enter it
function mkd() {
	mkdir -p "$@" && cd "$_"
}

# Change working directory to the top-most Finder window location
function cdf() { # short for `cdfinder`
	cd "$(osascript -e 'tell app "Finder" to POSIX path of (insertion location as alias)')"
}

# Create a .tar.gz archive, using `zopfli`, `pigz` or `gzip` for compression
function targz() {
	local tmpFile="${@%/}.tar"
	tar -cvf "${tmpFile}" --exclude=".DS_Store" "${@}" || return 1

	size=$(
		stat -f"%z" "${tmpFile}" 2>/dev/null # macOS `stat`
		stat -c"%s" "${tmpFile}" 2>/dev/null # GNU `stat`
	)

	local cmd=""
	if ((size < 52428800)) && hash zopfli 2>/dev/null; then
		# the .tar file is smaller than 50 MB and Zopfli is available; use it
		cmd="zopfli"
	else
		if hash pigz 2>/dev/null; then
			cmd="pigz"
		else
			cmd="gzip"
		fi
	fi

	echo "Compressing .tar ($((size / 1000)) kB) using \`${cmd}\`…"
	"${cmd}" -v "${tmpFile}" || return 1
	[ -f "${tmpFile}" ] && rm "${tmpFile}"

	zippedSize=$(
		stat -f"%z" "${tmpFile}.gz" 2>/dev/null # macOS `stat`
		stat -c"%s" "${tmpFile}.gz" 2>/dev/null # GNU `stat`
	)

	echo "${tmpFile}.gz ($((zippedSize / 1000)) kB) created successfully."
}

# Determine size of a file or total size of a directory
function fs() {
	if du -b /dev/null >/dev/null 2>&1; then
		local arg=-sbh
	else
		local arg=-sh
	fi
	if [[ -n "$@" ]]; then
		du $arg -- "$@"
	else
		du $arg .[^.]* ./*
	fi
}

# Use Git’s colored diff when available
hash git &>/dev/null
if [ $? -eq 0 ]; then
	function diff() {
		git diff --no-index --color-words "$@"
	}
fi

# Create a data URL from a file
function dataurl() {
	local mimeType=$(file -b --mime-type "$1")
	if [[ $mimeType == text/* ]]; then
		mimeType="${mimeType};charset=utf-8"
	fi
	echo "data:${mimeType};base64,$(openssl base64 -in "$1" | tr -d '\n')"
}

# Start an HTTP server from a directory, optionally specifying the port
function server() {
	local port="${1:-8000}"
	sleep 1 && open "http://localhost:${port}/" &
	# Set the default Content-Type to `text/plain` instead of `application/octet-stream`
	# And serve everything as UTF-8 (although not technically correct, this doesn’t break anything for binary files)
	python -c $'import SimpleHTTPServer;\nmap = SimpleHTTPServer.SimpleHTTPRequestHandler.extensions_map;\nmap[""] = "text/plain";\nfor key, value in map.items():\n\tmap[key] = value + ";charset=UTF-8";\nSimpleHTTPServer.test();' "$port"
}

# Start a PHP server from a directory, optionally specifying the port
# (Requires PHP 5.4.0+.)
function phpserver() {
	local port="${1:-4000}"
	local ip=$(ipconfig getifaddr en1)
	sleep 1 && open "http://${ip}:${port}/" &
	php -S "${ip}:${port}"
}

# Compare original and gzipped file size
function gz() {
	local origsize=$(wc -c <"$1")
	local gzipsize=$(gzip -c "$1" | wc -c)
	local ratio=$(echo "$gzipsize * 100 / $origsize" | bc -l)
	printf "orig: %d bytes\n" "$origsize"
	printf "gzip: %d bytes (%2.2f%%)\n" "$gzipsize" "$ratio"
}

# Run `dig` and display the most useful info
function digga() {
	dig +nocmd "$1" any +multiline +noall +answer
}

# Show all the names (CNs and SANs) listed in the SSL certificate
# for a given domain
function getcertnames() {
	if [ -z "${1}" ]; then
		echo "ERROR: No domain specified."
		return 1
	fi

	local domain="${1}"
	echo "Testing ${domain}…"
	echo "" # newline

	local tmp=$(echo -e "GET / HTTP/1.0\nEOT" |
		openssl s_client -connect "${domain}:443" -servername "${domain}" 2>&1)

	if [[ "${tmp}" = *"-----BEGIN CERTIFICATE-----"* ]]; then
		local certText=$(echo "${tmp}" |
			openssl x509 -text -certopt "no_aux, no_header, no_issuer, no_pubkey, \
			no_serial, no_sigdump, no_signame, no_validity, no_version")
		echo "Common Name:"
		echo "" # newline
		echo "${certText}" | grep "Subject:" | sed -e "s/^.*CN=//" | sed -e "s/\/emailAddress=.*//"
		echo "" # newline
		echo "Subject Alternative Name(s):"
		echo "" # newline
		echo "${certText}" | grep -A 1 "Subject Alternative Name:" |
			sed -e "2s/DNS://g" -e "s/ //g" | tr "," "\n" | tail -n +2
		return 0
	else
		echo "ERROR: Certificate not found."
		return 1
	fi
}

# Normalize `open` across Linux, macOS, and Windows.
# This is needed to make the `o` function (see below) cross-platform.
if [ ! $(uname -s) = 'Darwin' ]; then
	if grep -q Microsoft /proc/version; then
		# Ubuntu on Windows using the Linux subsystem
		alias open='explorer.exe'
	else
		alias open='xdg-open'
	fi
fi

# `o` with no arguments opens the current directory, otherwise opens the given
# location
function o() {
	if [ $# -eq 0 ]; then
		open .
	else
		open "$@"
	fi
}

# `tre` is a shorthand for `tree` with hidden files and color enabled, ignoring
# the `.git` directory, listing directories first. The output gets piped into
# `less` with options to preserve color and line numbers, unless the output is
# small enough for one screen.
function tre() {
	tree -aC -I '.git|node_modules|bower_components' --dirsfirst "$@" | less -FRNX
}


# ---- Podman Wrapper für macOS (Podman Machine) ----
# Optional konfigurierbar (via Umgebungsvariablen)
# PODMAN_MACHINE (Standard: podman-machine-default) Name der VM
# PODMAN_TIMEOUT (Standard: 60) Sekunden Wartezeit auf Socket

podman() {
  # Pfad zur echten Podman-CLI finden
  local PODMAN_BIN
  PODMAN_BIN=$(command -v podman) || { echo "podman: CLI nicht gefunden" >&2; return 127; }

  local errfile
  errfile="$(mktemp -t podmanwrap.XXXXXX)"

  # Erster Versuch: ganz normal
  if "$PODMAN_BIN" "$@" 2> >(tee -a "$errfile" >&2); then
    rm -f "$errfile"
    return 0
  fi
  local status=$?

  # Prüfen auf typische "Daemon nicht erreichbar"-Fehler
  if grep -qiE \
    '(cannot connect to podman|unable to connect to podman socket|connection refused|failed to connect)' \
    "$errfile"; then
    rm -f "$errfile"

    local machine="${PODMAN_MACHINE:-podman-machine-default}"
    local timeout="${PODMAN_TIMEOUT:-60}"

    echo "podman: Daemon nicht erreichbar. Starte Podman Machine '${machine}'..." >&2
    if ! podman machine start "$machine" >/dev/null 2>&1; then
      echo "podman: Konnte Podman Machine '${machine}' nicht starten." >&2
      return $status
    fi

    # Socket-Pfad ermitteln (sicherer als hartkodiert)
    local sock
    sock=$(podman system connection list --format '{{.URI}}' 2>/dev/null | grep '^unix://' | head -n1 | sed 's|^unix://||')

    # Falls kein Socket in der Connection-Liste steht (z. B. frisch eingerichtet)
    if [ -z "$sock" ]; then
      sock=$(find /var/folders -type s -name 'podman-machine-*-api.sock' 2>/dev/null | head -n1)
    fi

    # Warten bis Socket reagiert
    local t=0
    while (( t < timeout )); do
      if [ -S "$sock" ] && "$PODMAN_BIN" info >/dev/null 2>&1; then
        break
      fi
      sleep 1
      t=$((t+1))
    done
    if (( t >= timeout )); then
      echo "podman: Timeout (${timeout}s) beim Warten auf Socket ${sock}." >&2
      return $status
    fi

    # Befehl erneut ausführen
    "$PODMAN_BIN" "$@"
    return $?
  else
    # War ein anderer Fehler → unverändert durchreichen
    rm -f "$errfile"
    return $status
  fi
}
# ---- Ende Wrapper ----


# ---- Docker Wrapper für Lima auf macOS ----
# Optional konfigurierbar (via Umgebungsvariablen)
# LIMA_INSTANCE (Standard: docker)
# LIMA_SOCKET (Standard: $HOME/.lima/<instance>/sock/docker.sock)
# LIMA_TIMEOUT (Sekunden, Standard: 90)

docker() {
  # Pfad zur echten Docker-CLI (um die Funktion zu umgehen)
  local DOCKER_BIN
  DOCKER_BIN=$(command -v docker) || { echo "docker: CLI nicht gefunden" >&2; return 127; }

  # Erstversuch: ganz normal ausführen
  local errfile
  errfile="$(mktemp -t dockerwrap.XXXXXX)"
  # stderr live anzeigen und zugleich in Datei mitschneiden
  if "$DOCKER_BIN" "$@" 2> >(tee -a "$errfile" >&2); then
    rm -f "$errfile"
    return 0
  fi
  local status=$?

  # Prüfen, ob es ein typischer Verbindungsfehler zum Daemon ist
  if grep -qiE \
    '(cannot connect to the docker daemon|is the docker daemon running|error during connect|dial unix .+docker\.sock: connect: (connection refused|no such file or directory))' \
    "$errfile"; then
    rm -f "$errfile"

    # Konfigurierbar per Env: LIMA_INSTANCE, LIMA_SOCKET, LIMA_TIMEOUT
    local inst="${LIMA_INSTANCE:-docker}"
    local sock="${LIMA_SOCKET:-$HOME/.lima/${inst}/sock/docker.sock}"
    local timeout="${LIMA_TIMEOUT:-90}"

    echo "docker: Daemon nicht erreichbar. Starte Lima-Instanz '${inst}'..." >&2
    if ! limactl start "$inst" >/dev/null 2>&1; then
      echo "docker: Konnte Lima-Instanz '${inst}' nicht starten." >&2
      return $status
    fi

    # Auf Socket + responsive Daemon warten
    local t=0
    while (( t < timeout )); do
      if [ -S "$sock" ] && "$DOCKER_BIN" -H "unix://$sock" version >/dev/null 2>&1; then
        break
      fi
      sleep 1
      t=$((t+1))
    done
    if (( t >= timeout )); then
      echo "docker: Timeout (${timeout}s) beim Warten auf Socket ${sock}." >&2
      return $status
    fi

    # Erneut mit den Original-Argumenten versuchen (respektiert deinen aktuellen Context)
    "$DOCKER_BIN" "$@"
    return $?
  else
    # Kein Verbindungsfehler: Original-Fehlercode/-ausgabe durchreichen
    rm -f "$errfile"
    return $status
  fi
}
# ---- Ende Wrapper ----
