#!/usr/bin/env bash

mergepr() {
  local ids
  ids=$(command gh pr list 2>/dev/null | grep -E "feat|fix|chore" | awk '{print $1}')
  [ -z "$ids" ] && { echo "Keine passenden PRs gefunden."; return 0; }
  for i in $ids; do
    command gh pr merge "$i" -d -m
  done
}

randomstr() {
	local len=${1:-20}
	LC_ALL=C tr -dc '[:graph:]' </dev/urandom | head -c "$len"
	echo
}

# randomstr    erzeugt 20 Zeichen (Standard)
